<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".updatedLevels"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/white"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_back"
            tools:ignore="ContentDescription,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/levels"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/carbon_black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/level1"
                android:layout_width="160dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_closed"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtLevel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_1"
                    android:layout_gravity="center"

                    android:textColor="#fff"
                    android:textSize="25sp"/>
            </LinearLayout>   <!--level 1-->


            <LinearLayout
                android:id="@+id/level2"
                android:layout_width="160dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_closed"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtLevel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_2"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="25sp"/>
            </LinearLayout>   <!--level 2-->

        </LinearLayout>  <!--1st row-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/level3"
                android:layout_width="160dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_closed"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtLevel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_3"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="25sp"/>
            </LinearLayout>   <!--level 3-->


            <LinearLayout
                android:id="@+id/level4"
                android:layout_width="160dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_closed"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtLevel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_4"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="25sp"/>
            </LinearLayout>   <!--level 4-->

        </LinearLayout>  <!--2nd row-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/level5"
                android:layout_width="160dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_closed"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtLevel5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_5"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="25sp"/>
            </LinearLayout>   <!--level 5-->


            <LinearLayout
                android:id="@+id/level6"
                android:layout_width="160dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_closed"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtLevel6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_6"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="25sp"/>
            </LinearLayout>   <!--level 6-->

        </LinearLayout>  <!--3rd row-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/level7"
                android:layout_width="160dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_closed"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtLevel7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_7"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="25sp"/>
            </LinearLayout>   <!--level 7-->


            <LinearLayout
                android:id="@+id/level8"
                android:layout_width="160dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
