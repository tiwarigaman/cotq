                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="25sp"/>
            </LinearLayout>   <!--level 8-->

        </LinearLayout>  <!--4th row-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/level9"
                android:layout_width="160dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/ic_lock_closed"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtLevel9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_9"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="25sp"/>
            </LinearLayout>   <!--level 9-->


            <LinearLayout
                android:id="@+id/level10"
                android:layout_width="160dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/levels_bg"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/imgLevel10"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
